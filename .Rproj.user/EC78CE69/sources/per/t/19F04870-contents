```{r message=FALSE, warning=FALSE, results="asis"}
for(i in 2:ncol(datos_jp)){
datos_ = datos_jp[,c(1,i)]
datos_[[2]]= trimws(datos_[[2]], which = "l")
datos_[[2]] = gsub(", ", ",", datos_[[2]])
valores <- na.omit(unique(unlist(strsplit(as.character(datos_[[2]]), ","))))
ver = separate(datos_, vars_pull(names(datos_), 2), into = as.character(c(1:length(valores))), sep =",")
tabla = melt(ver, id.vars = c("nse"), na.rm = TRUE)
tabla$nse<-as.factor(tabla$nse)
levels(tabla$nse)<-c("Alto", "Medio alto", "Medio", "Medio Bajo", "Bajo")
assign(paste0("tabla_", names(datos_)[[2]]), tabla)
}

### Alcance de la cobertura de salud
tabla_alcance_cobertura_salud_rel = kable_styling(column_spec(kable(100*round(
  addmargins(
    prop.table(
      addmargins(
        table(tabla_alcance_cobertura_salud$value, tabla_alcance_cobertura_salud$nse),
        2),2),1),3),
  caption = paste("Alcance de la cobertura de salud","(porcentajes por NSE)")),  1, width="5cm"),
  latex_options = "HOLD_position")

tabla_alcance_cobertura_salud_abs = kable_styling(kable(addmargins(table(
  tabla_alcance_cobertura_salud$value, tabla_alcance_cobertura_salud$nse)),
  caption = "Alcance de la cobertura de salud según NSE (absolutos)"), latex_options = "HOLD_position") %>% column_spec(1, width = "10em")

### Origen del acceso a la informacion
