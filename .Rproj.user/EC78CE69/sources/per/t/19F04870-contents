```{r}
datos$`Cantidad de ambientes`[datos$`Cantidad de ambientes`==0]<-NA
datos$personas_por_cuarto<-datos$`Cuántas personas viven en esa casa?`/
  datos$`Cantidad de ambientes`


datos$hacinamiento_critico<-ifelse(datos$personas_por_cuarto>3, "más de tres personas por cuarto", "tres personas o menos por cuarto")



```

```{r}
datos_jp$`Cuántas son menores de 14 años?`[
  datos_jp$`Cuántas son menores de 14 años?`=="o"]<-0
datos_jp$`Cuántas son menores de 14 años?`[
  is.na(datos_jp$`Cuántas son menores de 14 años?`)==TRUE]<-0
datos_jp$`Cuántas son menores de 14 años?`<-
  as.numeric(as.character(datos_jp$`Cuántas son menores de 14 años?`))

datos_jp$menores<-"sin menores"
datos_jp$menores[datos_jp$`Cuántas son menores de 14 años?`>0]<-"con menores"

datos_jp$composicion_menores_sexo_aportante<-
  ifelse(datos_jp$menores=="con menores" & datos_jp$sexo_aportante=="Mujer", 1,
         ifelse(datos_jp$menores=="sin menores" & datos_jp$sexo_aportante=="Mujer", 2,3))

datos_jp$composicion_menores_sexo_aportante<-as.factor(datos_jp$composicion_menores_sexo_aportante)
levels(datos_jp$composicion_menores_sexo_aportante)<-c("aportante mujer con menores en el hogar",
                                                       "aportante mujer sin menores en el hogar",
                                                       "otras combinaciones")


kable_styling(column_spec(kable(addmargins(table(
    datos_jp$composicion_menores_sexo_aportante, datos_jp$nse),1), caption = "Hogares cuya principal aportante es mujer con o sin menores en el hogar según NSE (absolutos)"), 1, width="5cm"), latex_options = "HOLD_position")


kable_styling(column_spec(kable(round(100*addmargins(prop.table(
  table(
    datos_jp$composicion_menores_sexo_aportante, datos_jp$nse),2),1),2), caption = "Hogares cuya principal aportante es mujer con o sin menores en el hogar (porcentajes según NSE)"), 1, width="5cm"), latex_options = "HOLD_position")


```

Nota: la categoría "otras combinaciones" incluye los casos en que no es posible identificar el sexo del o la principal aportante  




```{r, echo=F, include=F, message=F}
load("datos_nuevas_tablas.Rda")
datos_nuevas_tablas$cant_menores_14 = as.numeric(datos_nuevas_tablas$cant_menores_14)
datos_nuevas_tablas$ingresos_del_hogar = as.factor(datos_nuevas_tablas$ingresos_del_hogar)
datos_nuevas_tablas$ingresos_del_hogar = factor(datos_nuevas_tablas$ingresos_del_hogar, levels = c("Menos de $25.000","Entre $25000 y 55.000","Entre $55.000 y $99.000","Entre $100.000 y $200.000","Más de $200.000"))

### Tabla ingresos del hogar y cantidad promedio de personas según rango etario
tabla1 = datos_nuevas_tablas %>%
  filter(is.na(ingresos_del_hogar)==F) %>% 
  group_by(ingresos_del_hogar) %>%
  summarise("menos de 14 años" = mean(cant_menores_14, na.rm = T),
            "de 15 a 60 años" = mean(cant_14_60, na.rm = T),
            "más de 60 años" = mean(cant_mas_60, na.rm = T))
tabla1
tabla1$`menos de 14 años`<-round(tabla1$`menos de 14 años`,2)
tabla1$`de 15 a 60 años`<-round(tabla1$`de 15 a 60 años`,2)
tabla1$`más de 60 años`<-round(tabla1$`más de 60 años`,2)

### Tabla ingresos del hogar y cantidad promedio de perceptores de ingresos, por género
tabla2 = datos_nuevas_tablas %>%
  filter(is.na(ingresos_del_hogar)==F) %>% 
  group_by(ingresos_del_hogar) %>%
  summarise("cantidad total de perceptores" = mean(cant_perceptores, na.rm = T),
            "cantidad de perceptores mujeres" = mean(cant_perceptores_mujer, na.rm = T),
            "cantidad de perceptores varones" = mean(cant_perceptores_varon, na.rm = T))
tabla2
tabla2$`cantidad total de perceptores`<-round(tabla2$`cantidad total de perceptores`,2)
tabla2$`cantidad de perceptores mujeres`<-round(tabla2$`cantidad de perceptores mujeres`,2)
tabla2$`cantidad de perceptores varones`<-round(tabla2$`cantidad de perceptores varones`,2)


### Tabla ingresos del hogar y cantidad promedio de miembros de la "vivienda" (no hogar)
tabla3 = datos_nuevas_tablas %>%
  filter(is.na(ingresos_del_hogar)==F) %>% 
  group_by(ingresos_del_hogar) %>%
  summarise("miembros del hogar" = mean(vivienda_miembros, na.rm = T),
            "cantidad de perceptores de ingresos" = mean(cant_perceptores, na.rm = T),
            "ratio miembros por perceptorx" =  mean(vivienda_miembros, na.rm = T)/mean(cant_perceptores, na.rm = T))
tabla3

tabla3$`miembros del hogar`<-round(tabla3$`miembros del hogar`,2)
tabla3$`cantidad de perceptores de ingresos`<-round(tabla3$`cantidad de perceptores de ingresos`,2)
tabla3$`ratio miembros por perceptorx`<-round(tabla3$`ratio miembros por perceptorx`,2)


```



